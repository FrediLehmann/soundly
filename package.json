{
  "name": "tasks",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
    "test": "jest src",
    "test:watch": "npm run test -- --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "dependencies": {
    "@supabase/supabase-js": "^1.29.1",
    "axios": "^0.24.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@storybook/addon-a11y": "^6.4.12",
    "@storybook/addon-actions": "^6.4.10",
    "@storybook/addon-essentials": "^6.4.12",
    "@storybook/addon-interactions": "^6.4.12",
    "@storybook/addon-links": "^6.4.12",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/jest": "^0.0.5",
    "@storybook/svelte": "^6.4.12",
    "@storybook/testing-library": "^0.0.7",
    "@sveltejs/adapter-vercel": "next",
    "@sveltejs/kit": "next",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/svelte": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-storybook": "^0.5.5",
    "eslint-plugin-svelte3": "^3.4.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-svelte": "^2.5.1",
    "svelte": "^3.46.1",
    "svelte-check": "^2.2.12",
    "svelte-jester": "^2.1.5",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.10.1",
    "ts-jest": "^27.1.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4"
  },
  "type": "module",
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "^\\$lib/supabase$": "<rootDir>__mocks__/supabase.js",
      "^\\$lib(.*)$": "<rootDir>/src/lib$1",
      "^\\$app(.*)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(png|webp)$": "<rootDir>/__mocks__/fileMock.js"
    }
  }
}
